<h1>All tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li><%=task.completed ? 'yes' : 'no' %><%=link_to task.title, task_path(task) %></li> <!--if click task, go to its details page (task being prefix for show route-->
    <%= link_to "Delete",
      task_path(task),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
    %>
  <% end %>
</ul>

<div>
  <%= link_to "Add a task", new_task_path(@new_task_path) %>
</div>
