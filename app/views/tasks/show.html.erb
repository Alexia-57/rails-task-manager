<h1><%= @task.title %></h1>

<%= @task.details %>
<%= @task.completed ? 'yes' : 'no' %>

<div>
  <%= link_to "Back to list", tasks_path(@tasks_path) %>
</div>

<div>
  <%= link_to "Edit task", edit_task_path(@task) %>
</div>

<div>
  <%= link_to "Delete",
    task_path(@task),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %>
</div>
